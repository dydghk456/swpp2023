<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_shape_dialog"
    android:padding="16dp">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeftLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <TextView
        android:id="@+id/textViewMissionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="RunUs가 추천하는 오늘의 러닝!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/textViewMissionInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMissionInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="오늘의 러닝 목표"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@id/goalDistanceStaticText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMissionTitle" />

    <TextView
        android:id="@+id/goalDistanceStaticText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="목표 거리"
        app:layout_constraintBottom_toTopOf="@id/distanceSeekBar"
        app:layout_constraintEnd_toStartOf="@id/guidelineLeftLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMissionInfo" />

    <TextView
        android:id="@+id/textViewGoalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="0km"
        app:layout_constraintBottom_toTopOf="@id/distanceSeekBar"
        app:layout_constraintEnd_toStartOf="@id/guideline3"
        app:layout_constraintStart_toEndOf="@id/goalDistanceStaticText"
        app:layout_constraintTop_toBottomOf="@id/textViewMissionInfo" />

    <TextView
        android:id="@+id/textViewDistanceLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="이상"
        app:layout_constraintBottom_toTopOf="@id/distanceSeekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/textViewMissionInfo" />


    <SeekBar
        android:id="@+id/distanceSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:max="500"
        android:progressBackgroundTint="#A3A3A3"
        android:progressTint="#4AA570"
        android:thumbTint="#4AA570"
        app:layout_constraintBottom_toTopOf="@id/goalTimeStaticText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goalDistanceStaticText" />


    <TextView
        android:id="@+id/goalTimeStaticText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="목표 시간"
        app:layout_constraintBottom_toTopOf="@id/timeSeekBar"
        app:layout_constraintEnd_toStartOf="@id/guidelineLeftLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/distanceSeekBar" />

    <TextView
        android:id="@+id/textViewGoalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="0분"
        app:layout_constraintBottom_toTopOf="@id/timeSeekBar"
        app:layout_constraintEnd_toStartOf="@id/guideline3"
        app:layout_constraintStart_toEndOf="@id/goalTimeStaticText"
        app:layout_constraintTop_toBottomOf="@id/distanceSeekBar" />

    <Button
        android:id="@+id/buttonLess"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:backgroundTint="#4AA570"
        android:text="이내"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/timeSeekBar"
        app:layout_constraintEnd_toStartOf="@id/buttonGreater"
        app:layout_constraintStart_toEndOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/distanceSeekBar" />

    <Button
        android:id="@+id/buttonGreater"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:backgroundTint="#A3A3A3"
        android:text="이상"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/timeSeekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonLess"
        app:layout_constraintTop_toBottomOf="@id/distanceSeekBar" />

    <SeekBar
        android:id="@+id/timeSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:max="60"
        android:progressBackgroundTint="#A3A3A3"
        android:progressTint="#4AA570"
        android:thumbTint="#4AA570"

        app:layout_constraintBottom_toTopOf="@id/buttonCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goalTimeStaticText" />


    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A3A3A3"
        android:text="취소"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewGoalTime" />

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4AA570"
        android:text="확인"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonCancel"
        app:layout_constraintTop_toBottomOf="@id/textViewGoalTime" />

</androidx.constraintlayout.widget.ConstraintLayout>
