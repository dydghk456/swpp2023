<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/round_shape_dialog"
    android:padding="16dp">


    <TextView
        android:id="@+id/textViewExitGame"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendardregular"
        android:gravity="center"
        android:text="@string/MultiModePlayExitMessage"
        app:layout_constraintBottom_toTopOf="@+id/buttonConfirmPlayExit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonConfirmPlayExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_shape_red"
        android:fontFamily="@font/pretendardregular"
        android:text="@string/ConfirmMessage"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewExitGame" />

</androidx.constraintlayout.widget.ConstraintLayout>
